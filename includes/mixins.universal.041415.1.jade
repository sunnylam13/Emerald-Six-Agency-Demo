mixin linkTemplate033115a(eleName,linkURL)
	//- this is for use with lists only
	if block
		block
	else
		li
			a(href=linkURL)=eleName

mixin linkTemplate042115a(eleName,linkURL)
	//- this is for general use
	if block
		block
	else
		a(href=linkURL)=eleName

mixin labelForSubMenus040115a(subMenuLabel,labelText)
	//- where subMenuLabel is the name set for the input#subMenuLabel and is a string i.e. 'toggle'
	if block
		block
	else
		li
			label(for=subMenuLabel)=labelText

mixin imgInsertTemplate(imgLink,altText)
	if block
		block
	else
		li
			img(src=imgLink, alt=altText)

mixin standardLinkButton041415a(buttonText,imgLink,classLabel,idLabel)
	//- This one is used for link buttons that you click and hover over
	if block
		block
	else
		a(href=imgLink,class=classLabel,id=idLabel)=buttonText

mixin standardButton041415a(buttonText,imgLink,classLabel,idLabel)
	//- This one is used for link buttons that you click and hover over
	//- You could re-write the button to have an a element within it or wrap the element in an a tag... in that case you can pass the var imgLink
	if block
		block
	else
		button(name=buttonText,class=classLabel,id=idLabel)=buttonText

mixin iconLink042115a(fontAwesome,linkURL)
	//- the anchor <a> link has a span inside of it instead of an image
	//- fontAwesome = you must provide a string value for the selected Font Awesome icon
	if block
		block
	else
		li
			a(href=linkURL)
				span(class=fontAwesome).fa

mixin iconLink042115b(fontAwesome,linkURL,tagName)
	//- the anchor <a> link has a span inside of it instead of an image
	//- fontAwesome = you must provide a string value for the selected Font Awesome icon
	//- tagName = name of the tag
	//- This version provides an actual name tag under the icon
	//- This can be used in other projects.
	if block
		block
	else
		li
			a(href=linkURL)
				span(class=fontAwesome).fa
			p.tag=tagName

//- END MIXINS UNIVERSAL